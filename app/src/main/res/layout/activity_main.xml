<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xxd.qlbisai.MainActivity">
    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>
    <LinearLayout
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tap"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:layout_margin="10dp"
            android:src="@mipmap/calandar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_margin="10dp"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@mipmap/daojishi"

            android:layout_height="match_parent" />
        <ImageView
            android:layout_margin="10dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/plan"

            android:layout_height="match_parent" />
        <ImageView
            android:layout_margin="10dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/other"

            android:layout_height="match_parent" />
    </LinearLayout>



</LinearLayout>
