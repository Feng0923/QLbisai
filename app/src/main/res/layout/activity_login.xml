        android:background="@drawable/shapefile"
        android:onClick="Login"

        android:text="登录"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
</LinearLayout>

